<%# <h1>Resumes#index</h1>
<p>Find me in app/views/resumes/index.html.erb</p> %>

<div class="container">   
<% if !flash[:notice].blank? %>   
   <div>   
      <%= flash[:notice] %>   
   </div>   
<% end %>   
  
<br>   
  
<%= link_to "New Resume", new_resume_path %>   
<br>   
<br>   
  
<table border="3">   
   <thead>   
      <tr>   
         <th>Candidate Name</th>   
          <th>Image or File</th>  
         <th>Download Link</th>   
         <th>Action</th>   
      </tr>   
   </thead>   
      
   <tbody>   
      <% @resumes.each do |resume| %>   
            
         <tr>   
            <td><%= resume.name %></td>  
            <td><%= image_tag resume.attachment_url, class:"img_preview", alt: "Image is not working" %></td> 
            <td><%= link_to "View", resume.attachment_url %></td>   
            <td><%= link_to "Delete",  resume, method: :delete, data: {confirm:
        "Are you sure you want to delete #{resume.name}?" } %></td>   
         </tr>   
            
      <% end %>   
   </tbody>   
      
</table>   
</div>  